---
import { ViewTransitions } from "astro:transitions";

import "@/styles/globals.css";

import Navigation from "@/components/navigation-menu/Navigation.vue";
import ToogleTheme from "@/components/toggle-theme/ToggleTheme.vue";
import Footer from "@/components/footer/Footer.vue";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<script is:inline src="./node_modules/preline/dist/preline.js"></script>

<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class="bg-slate-200 dark:bg-[#121C22] font-regular">
    <a href="/" class="fixed top-6 left-8 px-4 py-2 cursor-pointer"
      ><span class="font-bold text-xl text-[#192831] dark:text-white">A</span
      ></a
    >
    <Navigation client:only />
    <ToogleTheme client:load />
    <div class="flex justify-center">
      <div class="w-full max-w-3xl">
        <slot />
      </div>
    </div>
    <Footer />
  </body>
</html>

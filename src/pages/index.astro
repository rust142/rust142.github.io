---
import "@/styles/globals.css";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Hello World">
  <main transition:animate="slide">
    <div class="mt-48 space-y-10">
      <!-- Hero -->
      <div class="space-y-4">
        <h1 class="text-[2.9rem] font-bold text-[#192831] dark:text-[#717175]">
          Agung Maulana
        </h1>
        <div class="space-y-8">
          <div class="space-y-1.5">
            <p class="text-lg text-black dark:text-white">Software Engeener</p>
            <p class="text-base text-[#192831] dark:text-[#a6a6ac]">
              Obsessed with Cyber Security.
            </p>
          </div>

          <p class="text-base font-semibold text-[#192831] dark:text-white">
            Press <span
              class="m-1 px-1.5 bg-[#aaaab4] dark:bg-[#F2F2F2] text-[#192831] dark:text-[#77777e] rounded"
              >ctrl</span
            >+<span
              class="m-1 px-1.5 bg-[#aaaab4] dark:bg-[#F2F2F2] text-[#192831] dark:text-[#77777e] rounded"
              >k</span
            > to start
          </p>
        </div>
      </div>
    </div>
  </main>
</Layout>
